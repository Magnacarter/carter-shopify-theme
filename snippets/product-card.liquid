<div class="w-full py-6 px-3">
    <div class="border bg-white shadow rounded-lg overflow-hidden">
        <a href="{{ the_product.url }}">
            {% if the_product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ the_product.featured_image | img_url: 'medium' }}" alt="{{ the_product.featured_image_alt }}">
                </div>
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        
        <div class="flex flex-col p-4">
            {% if section.settings.show_vendor %}
                <span class="text-sm text-gray-400">{{ the_product.vendor }}</span>
            {% endif %}

            <a href="{{ the_product.url }}" class="text-gray-700 uppercase font-medium">{{ the_product.title }}</a>

            <p class="text-gray-500">{{ the_product.price | money }}</p>
        </div>
    </div>
</div>
