<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure.url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-gray-100 font-medium shadow bg-green-600 hover:bg-green-800 hover:text-white">{{ section.settings.button_label }}</a>
    </div>
</div>

{% schema %}
{
    "name": "Temeplate 404",
    "tag": "section", // this works like the wrapper attr. Will wrap the template in an html tag
    "class": "flex items-center justify-center text-center py-7 h-screen", // add classes to the above attr
    "settings": [
      {
         "type": "text",
         "id": "title",
         "default": "404",
         "label": "404 Heading Title"
      },
      {
        "type": "text",
        "id": "subtext_title",
        "default": "The page you're looking for couldn't be found",
        "label": "Subtext Title"
      },
      {
         "type": "text",
         "id": "button_label",
         "default": "Back to home",
         "label": "Button Label"
      },
      {
         "type": "url",
         "id": "button_url",
         "label": "Button URL"
      }
  ]
}
{% endschema %}